# ============================================================================
# Environment Variables - VLM-Bot
# ============================================================================
# Copiez ce fichier vers .env et remplissez vos valeurs

# Hugging Face Token (requis pour mod√®les gated)
HF_TOKEN=your_huggingface_token_here

# Paths
DATA_DIR=data
RAG_INDEX_PATH=data/processed/faiss_index
MODEL_CACHE_DIR=models

# Model Configuration
VLM_MODEL=microsoft/Phi-3-vision-128k-instruct
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Device Configuration
DEVICE=cuda
# Pour 4GB VRAM, utilisez: DEVICE=cpu ou ajoutez offload

# RAG Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=100
TOP_K_SOURCES=5

# Gradio Configuration
GRADIO_PORT=7860
GRADIO_SHARE=false
