# ============================================================================
# Environment Variables - VLM-Bot
# ============================================================================
# Copiez ce fichier vers .env et remplissez vos valeurs

# Hugging Face Token (requis pour mod√®les gated)
HF_TOKEN=your_huggingface_token_here

# Paths
DATA_DIR=data
RAG_INDEX_PATH=data/processed/faiss_index
MODEL_CACHE_DIR=models

# Model Configuration
VLM_MODEL=llava-hf/llava-1.5-7b-hf
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Device Configuration
DEVICE=cuda
# Pour 6GB VRAM, quantization 4-bit automatique (RTX 4050)

# RAG Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=100
TOP_K_SOURCES=5

# Gradio Configuration
GRADIO_PORT=7860
GRADIO_SHARE=false
